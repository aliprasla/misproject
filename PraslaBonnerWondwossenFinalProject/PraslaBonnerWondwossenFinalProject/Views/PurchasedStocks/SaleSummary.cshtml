@model PraslaBonnerWondwossenFinalProject.Models.PurchasedStock

@{
    ViewBag.Title = "SaleSummary";
}

<h2>Summary</h2>


@using (Html.BeginForm())
{
 


    <div class="form-horizontal">
        <hr />

        @Html.HiddenFor(model => model.PurchasedStockId)
        <div class="form-group">
            Date
            <div class="col-md-10">
                @Html.Label("Date", (string)ViewBag.Date, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            Shares Sold
            <div class="col-md-10">
                @Html.Label("Shares", (string)ViewBag.Shares, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            Net Profit
            <div class="col-md-10">
                @Html.Label("NetProfit", (string)ViewBag.NetProfit, new { @class = "form-control" })
            </div>

            <div class="form-group">
                Shares Left
                <div class="col-md-10">
                    @Html.Label("SharesLeft", (string)ViewBag.SharesLeft, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.stock.Name)
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.stock.Name)
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.stock.Fees)
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.stock.Fees)
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }

                <div>
                    @Html.ActionLink("Cancel", "Index")
                </div>
